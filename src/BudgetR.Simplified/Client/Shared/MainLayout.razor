@using BudgetR.Simplified.Client.Auth
@inherits LayoutComponentBase
<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudGrid>
                <MudItem xs="6" Class="d-flex align-center">
                    <MudText Typo="Typo.h5" Class="ml-3">BudgetR Simplified</MudText>
                </MudItem>
                <MudItem xs="6" Class="d-flex align-center justify-end">
                    <AccessControl />
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudGrid>
                @if (clientContext.UserIsActive)
                {
                    <MudItem xs="3" Class="mt-4">
                        <NavMenu />
                    </MudItem>
                }
                <MudItem xs="9" Class="mt-4">
                    @Body
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudMainContent>
</MudLayout>
<MudScrollToTop>
    <MudFab Color="Color.Tertiary" StartIcon="@Icons.Material.Filled.ArrowCircleUp" />
</MudScrollToTop>

<CheckUserStatus />

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}